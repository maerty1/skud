# Server Configuration
SERVER_ADDR=0.0.0.0
SERVER_PORT=8999

# Web Interface Configuration
WEB_ADDR=0.0.0.0
WEB_PORT=8080
WEB_ENABLED=true

# HTTP Service (1C Integration)
# Установите эти переменные окружения для подключения к 1C сервису
HTTP_SERVICE_ACTIVE=true
HTTP_SERVICE_IP=example-server.example.com
HTTP_SERVICE_PORT=80
HTTP_SERVICE_NAME=example-server.example.com
HTTP_SERVICE_TERMLIST_PATH=/example/hs/ACS/terminals
HTTP_SERVICE_IDENT_PATH=/example/hs/ACS/checking
HTTP_SERVICE_SOLAR_PATH=/example/hs/ACS/solarium
HTTP_SERVICE_UID_PATH=/example/hs/ACS/uid
HTTP_SERVICE_URL_FMT_SUFF=example
HTTP_SERVICE_USER=ExampleUser
HTTP_SERVICE_PASS=ExamplePassword

# Timeouts
SERVICE_REQUEST_EXPIRE_TIME=5.0
SESSION_EXPIRE_TIME=300.0
TERMINAL_CONNECT_TIMEOUT=10.0

# Error Handling
SERVICE_AUTOFIX_EXPIRED=false
SERVICE_LINK_ERR_MSG=Ошибка связи. Обратитесь на рецепцию.
HTTP_REQUEST_RETRY_COUNT=2
HTTP_REQUEST_RETRY_DELAY=0.5

# Messages
SERVICE_ERR_MSG=Ошибка связи с БД
SERVICE_FIXED_MSG=Проходите
SERVICE_DENIED_MSG=Доступ запрещен

# JSP Settings
JSP_LISTENER_PORT=false
JSP_DEV_AUTO_PING_ENABLED=true

# Camera Service Messages
CAM_SERVICE_RESULT_MSG_NO=Лицо не распознано
CAM_SERVICE_RESULT_MSG_NF=НЕТ ФОТО !!! Обратитесь в отдел продаж
CAM_SERVICE_RESULT_MSG_FAIL=Ошибка распознавания

# Terminal List Configuration
TERM_LIST_CHECK_TIME=60.0
TERM_LIST_FILTER=/192\.168\.1\.(10|20|30)/
TERM_LIST_FILTER_ABSENT=false

# Logging
LOG_FILE=log_bin.txt
LOG_ROTATION_ENABLED=true
LOG_ROTATION_MAX_SIZE=10485760
LOG_ROTATION_MAX_FILES=10
LOG_ROTATION_MAX_DAYS=30

